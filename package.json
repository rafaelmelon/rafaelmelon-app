{
  "name": "rafaelmelon",
  "version": "1.0.0",
  "description": "Rafael Melón - Front-end Web Developer Portfolio",
  "main": "index.js",
  "scripts": {
    "build": "yarn run clean-dist && webpack -p --config=configs/webpack/prod.js",
    "clean-dist": "rm -f -r -d dist",
    "lint": "tslint './src/**/*.ts*' --format stylish --force --fix",
    "start": "yarn run start-dev",
    "start-dev": "webpack-dev-server --config=configs/webpack/dev.js",
    "start-prod": "yarn run build && node server/express.js",
    "test": "jest --watch --coverage --config=configs/jest.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rafaelmelon/rafaelmelon.git"
  },
  "keywords": [
    "react",
    "webpack",
    "babel",
    "typescript",
    "styled-components",
    "redux"
  ],
  "author": "Rafael Melón <info@rafaelmelon.es> (http://rafaelmelon.es/)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/rafaelmelon/rafaelmelon/issues"
  },
  "homepage": "https://github.com/rafaelmelon/rafaelmelon#readme",
  "devDependencies": {
    "@babel/cli": "^7.1.5",
    "@babel/core": "^7.1.6",
    "@babel/preset-env": "^7.1.6",
    "@babel/preset-react": "^7.0.0",
    "@types/jest": "^23.3.9",
    "@types/node": "^10.12.9",
    "awesome-typescript-loader": "^5.2.1",
    "babel-loader": "^8.0.4",
    "express": "^4.16.4",
    "file-loader": "^2.0.0",
    "html-webpack-plugin": "^3.2.0",
    "image-webpack-loader": "^4.5.0",
    "jest": "^23.6.0",
    "prettier": "^1.15.2",
    "react-hot-loader": "^4.3.12",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.16.0",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-plugin-prettier": "^2.0.1",
    "tslint-react": "^3.6.0",
    "typescript": "^3.1.6",
    "uglifyjs-webpack-plugin": "^2.0.1",
    "webpack": "^4.25.1",
    "webpack-cli": "^3.1.2",
    "webpack-dev-middleware": "^3.4.0",
    "webpack-dev-server": "^3.1.10",
    "webpack-merge": "^4.1.4"
  },
  "dependencies": {
